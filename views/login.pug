extends layout

block content
    h1 Login to Bored@TheButt
        if user
            a(href = '/') Home
            a(href = '/posts/add') Add Post 
            a(href = '/users/logout') Logout
        else
            br
            a(href = '/') Home
        br
    form(method='POST', action = '/users/login')  
        #form-group
            label Username:
            input.form-control(name = 'username', type = 'text')

        #form-group
            label Password:
            input.form-control(name = 'password', type = 'password')
            
        input.btn.btn-primary(type = "submit", value = "Submit")
    img(src='https://i.redd.it/lqcbyi2itqq31.jpg' alt='login' style='width:30%; height:auto;')